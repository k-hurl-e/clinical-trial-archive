modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Clinical Trials Backup"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Clinical Trials Backup Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Clinical Trials Update Test"

[[workflows.workflow]]
name = "Clinical Trials Backup"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python clinical_trials_backup.py --max-trials 5"

[[workflows.workflow]]
name = "Clinical Trials Backup Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python clinical_trials_backup.py --max-trials 5"

[[workflows.workflow]]
name = "Clinical Trials Update Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python clinical_trials_backup.py --update-only"

[deployment]
run = ["sh", "-c", "python clinical_trials_backup.py --max-trials 5"]
